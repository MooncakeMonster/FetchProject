<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/event_list_margin"
    android:paddingRight="@dimen/event_list_margin"
    android:paddingTop="@dimen/standard_padding_size"
    android:paddingBottom="@dimen/standard_padding_size"
    android:layout_marginTop="0dp"
    android:layout_marginBottom="0dp"
    android:focusableInTouchMode="true">

    <Button
        android:layout_width="@dimen/date_button_size"
        android:layout_height="wrap_content"
        android:id="@+id/option_date"
        android:text="Start Date"
        android:textSize="@dimen/event_text_size"
        android:textColor="@color/caldroid_black"
        android:inputType="textCapCharacters"
        android:background="@android:color/transparent"
        android:layout_alignBottom="@+id/eventIcon"
        android:layout_toLeftOf="@+id/eventTime"
        android:layout_toStartOf="@+id/eventTime" />

    <Button
        android:layout_width="@dimen/time_button_size"
        android:layout_height="wrap_content"
        android:id="@+id/option_time"
        android:text="Start time"
        android:textSize="@dimen/event_text_size"
        android:textColor="@color/caldroid_black"
        android:inputType="textCapCharacters"
        android:background="@android:color/transparent"
        android:layout_alignTop="@+id/option_date"
        android:layout_toRightOf="@+id/option_date"
        android:layout_toEndOf="@+id/option_date" />

    <ImageView
        android:id="@+id/remove_option"
        android:src="@drawable/crossred"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="centerCrop"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>