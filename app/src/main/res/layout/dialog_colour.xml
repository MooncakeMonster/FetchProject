<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <!-- Bear colours -->
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/imageButton1"
            android:layout_width="@dimen/standard_icon_size"
            android:layout_height="@dimen/event_icon_size"
            android:layout_marginBottom="@dimen/standard_margin_size"
            android:background="@drawable/beared"
            android:layout_marginLeft="22dp" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/imageButton2"
            android:layout_width="@dimen/standard_icon_size"
            android:layout_height="@dimen/event_icon_size"
            android:background="@drawable/bearyellow" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/imageButton3"
            android:layout_width="@dimen/standard_icon_size"
            android:layout_height="@dimen/event_icon_size"
            android:background="@drawable/beargreen" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/imageButton4"
            android:layout_width="@dimen/standard_icon_size"
            android:layout_height="@dimen/event_icon_size"
            android:background="@drawable/bearblue" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/imageButton5"
            android:layout_width="@dimen/standard_icon_size"
            android:layout_height="@dimen/event_icon_size"
            android:background="@drawable/bearpurple" />
    </LinearLayout>

</LinearLayout>