<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/cloudy"
    android:padding="10dp"
    tools:context="mooncakemonster.orbitalcalendar.event.EventActivity">

    <!-- Event title -->
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Title"
        android:padding="10dp"
        android:layout_marginBottom="5dp"
        android:id="@+id/picture_title"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <!-- Caption -->
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Caption"
        android:padding="10dp"
        android:layout_marginBottom="5dp"
        android:id="@+id/picture_caption"
        android:layout_below="@+id/picture_title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <!-- ImageView to display user's choosen picture-->
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/caldroid_transparent"
        android:id="@+id/imagebutton"
        android:layout_below="@+id/picture_caption"
        android:layout_above="@+id/button1"
        android:layout_centerHorizontal="true" />

    <!-- Smileys -->
    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@mipmap/smile1"
        android:id="@+id/button1"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@mipmap/smile2"
        android:id="@+id/button2"
        android:layout_alignTop="@+id/button1"
        android:layout_toRightOf="@+id/button1"
        android:layout_toEndOf="@+id/button1" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@mipmap/smile3"
        android:id="@+id/button3"
        android:layout_alignTop="@+id/button2"
        android:layout_toRightOf="@+id/button2"
        android:layout_toEndOf="@+id/button2" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@mipmap/smile4"
        android:id="@+id/button4"
        android:layout_alignTop="@+id/button3"
        android:layout_toRightOf="@+id/button3"
        android:layout_toEndOf="@+id/button3" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@mipmap/smile5"
        android:id="@+id/button5"
        android:layout_alignTop="@+id/button4"
        android:layout_toRightOf="@+id/button4"
        android:layout_toEndOf="@+id/button4" />

    <!-- Empty button -->
    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@color/caldroid_transparent"
        android:id="@+id/select_smiley"
        android:text="Empty"
        android:layout_alignTop="@+id/button5"
        android:layout_alignRight="@+id/imagebutton"
        android:layout_alignEnd="@+id/imagebutton" />

</RelativeLayout>
