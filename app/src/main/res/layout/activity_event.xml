<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/clouds"
    tools:context="mooncakemonster.orbitalcalendar.event.EventActivity">

    <!-- Select calendar dates buttons (Start and End) -->

    <!-- Event title -->
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:id="@+id/title"
        android:hint="Title"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <!-- Location -->
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:id="@+id/location"
        android:hint="Location"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/title" />

    <!-- Notes -->

    <!-- Remind me checkbox -->
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remind me"
        android:id="@+id/checkBox"
        android:layout_above="@+id/add"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <!-- Add and invite buttons -->
    <Button
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:id="@+id/add"
        android:text="ADD"
        android:background="@drawable/redbutton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/endT"
        android:layout_alignEnd="@+id/endT" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/editText"
        android:hint="Notes"
        android:layout_below="@+id/endD"
        android:layout_alignRight="@+id/endT"
        android:layout_alignEnd="@+id/endT" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="End Date"
        android:id="@+id/endD"
        android:textSize="18dp"
        android:background="@color/caldroid_transparent"
        android:layout_below="@+id/startD"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/startT"
        android:layout_toStartOf="@+id/startT" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Start Date"
        android:id="@+id/startD"
        android:textSize="18dp"
        android:background="@color/caldroid_transparent"
        android:layout_below="@+id/location"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/startT"
        android:layout_toStartOf="@+id/startT" />

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Start Time"
        android:id="@+id/startT"
        android:textSize="18dp"
        android:background="@color/caldroid_transparent"
        android:layout_below="@+id/location"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="End Time"
        android:id="@+id/endT"
        android:textSize="18dp"
        android:background="@color/caldroid_transparent"
        android:layout_below="@+id/startT"
        android:layout_alignLeft="@+id/startT"
        android:layout_alignStart="@+id/startT" />

</RelativeLayout>
