<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/standard_padding_size"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/input_text"
        android:gravity="center_vertical"
        android:textColor="@color/black"
        android:textSize="@dimen/event_text_size"
        android:padding="@dimen/standard_padding_size"
        android:layout_marginTop = "@dimen/standard_padding_size"
        android:layout_marginLeft="@dimen/standard_padding_size"
        android:layout_marginRight="@dimen/standard_padding_size"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/input_email"
        android:hint="Email Address"
        android:gravity="center_vertical"
        android:textColor="@color/black"
        android:textSize="@dimen/event_text_size"
        android:paddingLeft="@dimen/standard_padding_size"
        android:layout_margin="@dimen/standard_padding_size"
        android:layout_marginBottom="@dimen/standard_margin_size"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Username"
        android:id="@+id/input_username"
        android:textColor="@color/black"
        android:textSize="@dimen/event_text_size"
        android:padding="@dimen/standard_padding_size"
        android:layout_margin="@dimen/standard_padding_size"
        android:layout_marginBottom="@dimen/standard_margin_size"
        android:gravity="center_vertical" />


</LinearLayout>