<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="@dimen/standard_layout_size"
    android:background="@drawable/cloudy"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <!-- Email input -->
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/emailL"
        android:hint="@string/login_email"
        android:background="@color/caldroid_white"
        android:inputType="textEmailAddress"
        android:layout_marginBottom="@dimen/standard_margin_size"
        android:padding="@dimen/standard_padding_size"
        android:layout_gravity="center_horizontal"
        android:layout_above="@+id/passwordL"
        android:layout_alignLeft="@+id/passwordL"
        android:layout_alignStart="@+id/passwordL" />

    <!-- Password input -->
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/passwordL"
        android:background="@color/caldroid_white"
        android:hint="@string/login_password"
        android:padding="@dimen/standard_padding_size"
        android:layout_marginBottom="@dimen/login_margin_size"
        android:layout_gravity="center_horizontal"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/login"
        android:layout_alignStart="@+id/login" />

    <!-- Login button -->
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/login_button"
        android:textColor="@color/caldroid_white"
        android:id="@+id/login"
        android:textSize="@dimen/standard_text_size"
        android:layout_marginBottom="@dimen/standard_margin_size"
        android:background="@color/button"
        android:layout_below="@+id/passwordL"
        android:layout_centerHorizontal="true" />

    <!-- Link users to registration activity -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/standard_icon_size"
        android:id="@+id/registerhere"
        android:layout_marginBottom="@dimen/standard_margin_size"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:text="@string/login_registration"
        android:layout_below="@+id/login"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
