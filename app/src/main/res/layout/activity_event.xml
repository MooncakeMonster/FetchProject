<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/cloudy"
    android:padding="10dp"
    tools:context="mooncakemonster.orbitalcalendar.event.EventActivity">

    <!-- Event title -->
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/title"
        android:hint="Title"
        android:layout_marginBottom="5dp"
        android:padding="10dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <!-- Location -->
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/appointmentLocation"
        android:hint="Location"
        android:padding="10dp"
        android:layout_marginBottom="5dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/title"
        android:layout_toLeftOf="@+id/button"
        android:layout_toStartOf="@+id/button" />

    <!-- Add button -->
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/addAppointmentButton"
        android:text="CREATE EVENT"
        android:textColor="@color/caldroid_white"
        android:background="@color/button_green"
        android:onClick="onClick"
        android:textSize="16dp"
        android:layout_below="@+id/appointmentNotes"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <!--Start and End Date-->
    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Start Date"
        android:id="@+id/startD"
        android:textSize="18dp"
        android:textColor="@color/caldroid_black"
        android:inputType="textCapCharacters"
        android:background="@android:color/transparent"
        android:layout_below="@+id/appointmentLocation"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/startT"
        android:layout_toStartOf="@+id/startT" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="End Date"
        android:id="@+id/endD"
        android:textSize="18dp"
        android:textColor="@color/caldroid_black"
        android:inputType="textCapCharacters"
        android:background="@android:color/transparent"
        android:layout_below="@+id/startD"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/startT"
        android:layout_toStartOf="@+id/startT" />

    <!--Start and End Time-->
    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Start Time"
        android:id="@+id/startT"
        android:textSize="18dp"
        android:textColor="@color/caldroid_black"
        android:inputType="textCapCharacters"
        android:background="@android:color/transparent"
        android:layout_below="@+id/appointmentLocation"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="End Time"
        android:id="@+id/endT"
        android:textSize="18dp"
        android:textColor="@color/caldroid_black"
        android:inputType="textCapCharacters"
        android:background="@android:color/transparent"
        android:layout_below="@+id/startT"
        android:layout_alignLeft="@+id/startT"
        android:layout_alignStart="@+id/startT" />

    <!-- Reminder checkbox -->
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Remind me"
        android:textSize="18dp"
        android:id="@+id/remindbox"
        android:onClick="selectItem"
        android:textStyle="bold"
        android:checked="false"
        android:textColor="@color/caldroid_black"
        android:layout_below="@+id/everybox"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <!-- Reminder button -->
    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="3"
        android:id="@+id/remindnum"
        android:textSize="18dp"
        android:textColor="@color/caldroid_black"
        android:background="@android:color/transparent"
        android:layout_alignBottom="@+id/remindbox"
        android:layout_toRightOf="@+id/remindbox"
        android:layout_toEndOf="@+id/remindbox" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="mins before event"
        android:id="@+id/remindweek"
        android:textSize="18dp"
        android:textColor="@color/caldroid_black"
        android:inputType="textCapCharacters"
        android:background="@android:color/transparent"
        android:layout_alignTop="@+id/remindnum"
        android:layout_toRightOf="@+id/remindnum"
        android:layout_toEndOf="@+id/remindnum" />


    <!-- Checkbox to select range of days/week/month for event -->
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Every"
        android:id="@+id/everybox"
        android:onClick="selectItem"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="@color/caldroid_black"
        android:layout_alignBottom="@+id/everynum"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <!-- Every button -->
    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="5"
        android:textColor="@color/caldroid_black"
        android:id="@+id/everynum"
        android:textSize="18dp"
        android:background="@android:color/transparent"
        android:layout_below="@+id/endD"
        android:layout_toRightOf="@+id/remindbox"
        android:layout_toEndOf="@+id/remindbox" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="days event"
        android:id="@+id/everyweek"
        android:textColor="@color/caldroid_black"
        android:textSize="18dp"
        android:inputType="textCapCharacters"
        android:background="@android:color/transparent"
        android:layout_below="@+id/endD"
        android:layout_alignLeft="@+id/remindweek"
        android:layout_alignStart="@+id/remindweek" />

    <!-- Notes -->
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/appointmentNotes"
        android:hint="Notes"
        android:layout_marginBottom="5dp"
        android:padding="10dp"
        android:layout_below="@+id/participants"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/participants"
        android:hint="Participants"
        android:layout_marginBottom="5dp"
        android:padding="10dp"
        android:layout_below="@+id/remindbox"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/appointmentNotes"
        android:layout_alignEnd="@+id/appointmentNotes" />

    <Button
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/location"
        android:id="@+id/button"
        android:layout_below="@+id/title"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
