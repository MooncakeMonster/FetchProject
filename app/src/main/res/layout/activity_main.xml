<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cloudy"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/icon_horizontal_margin"
        android:layout_height="@dimen/icon_vertical_margin"
        android:layout_above="@+id/slogan"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:background="@drawable/bearicon" />

    <ImageView
        android:id="@+id/slogan"
        android:layout_width="@dimen/slogan_h"
        android:layout_height="@dimen/slogan_v"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/slogan" />

    <ImageView
        android:id="@+id/tap"
        android:layout_width="@dimen/tap_h"
        android:layout_height="@dimen/tap_v"
        android:layout_marginTop="103dp"
        android:src="@drawable/tap"
        android:layout_below="@+id/slogan"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
