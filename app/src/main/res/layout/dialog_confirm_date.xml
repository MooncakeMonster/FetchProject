<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:padding="@dimen/standard_padding_size"
        android:textSize="@dimen/standard_text_size"
        android:textColor="@color/black"
        android:text="Can make it on this day:"/>

    <ListView
        android:id="@+id/can_make_it"
        android:paddingLeft="@dimen/standard_padding_size"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
    </ListView>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:padding="@dimen/standard_padding_size"
        android:textSize="@dimen/standard_text_size"
        android:textColor="@color/black"
        android:text="Cannot make it on this day:"/>

    <ListView
        android:id="@+id/cannot_make_it"
        android:paddingLeft="@dimen/standard_padding_size"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
    </ListView>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:padding="@dimen/standard_padding_size"
        android:textSize="@dimen/standard_text_size"
        android:textColor="@color/black"
        android:text="Rejected voting:"/>

    <ListView
        android:id="@+id/rejected_voting"
        android:paddingLeft="@dimen/standard_padding_size"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
    </ListView>


</LinearLayout>