<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/clouds">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="LOGOUT"
        android:textStyle="bold"
        android:textSize="15dp"
        android:id="@+id/logout"
        android:background="@drawable/buttonborder"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/myaccounttitle"
        android:text="MY ACCOUNT"
        android:textStyle="bold"
        android:gravity="center_vertical"
        android:textSize="18dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Show username"
        android:id="@+id/updateuser"
        android:textSize="18dp"
        android:gravity="center_vertical"
        android:background="@color/caldroid_transparent"
        android:layout_below="@+id/useremail"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/useremail"
        android:hint="Show user email"
        android:gravity="center_vertical"
        android:textSize="18dp"
        android:layout_below="@+id/myaccounttitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/aboutustitle"
        android:text="ABOUT US"
        android:textStyle="bold"
        android:gravity="center_vertical"
        android:textSize="18dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/updateuser" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/textView"
        android:text="A paragraph about us. "
        android:textSize="18dp"
        android:layout_marginBottom="10dp"
        android:layout_alignLeft="@+id/aboutustitle"
        android:layout_alignStart="@+id/aboutustitle"
        android:layout_above="@+id/logout"
        android:layout_below="@+id/aboutustitle" />


</RelativeLayout>